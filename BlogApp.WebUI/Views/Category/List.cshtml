@model IEnumerable<BlogApp.Entity.Category>
    @{
    ViewData["Title"] = "List";
    }

<div class="container mt-3">
    <h1>Category List</h1>
    <hr />
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>
                            <td class="text-right">
                                <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Details" asp-route-id="@item.CategoryId"> Details</a>
                                <a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId"> Delete</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">Category Eklenmemiş.</div>
            }
        </div>
    </div>
</div>


